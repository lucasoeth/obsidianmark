{
    "manifest_version": 3,
    "name": "ObsidianMark",
    "version": "1.0",
    "author": "Lucas Soeth",
    "description": "Clip web content to Obsidian",
    "icons": {
        "16": "icons/icon_16.png",
        "24": "icons/icon_24.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "64": "icons/icon_64.png",
        "128": "icons/icon_128.png",
        "256": "icons/icon_256.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite",
        "storage"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "action": {
        "default_icon": {
            "16": "icons/icon_16.png",
            "24": "icons/icon_24.png",
            "32": "icons/icon_32.png",
            "48": "icons/icon_48.png",
            "64": "icons/icon_64.png",
            "128": "icons/icon_128.png",
            "256": "icons/icon_256.png"
        },
        "default_title": "ObsidianMark"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    }
}